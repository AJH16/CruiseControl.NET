<cruisecontrol>
  <project name="[PROJECT_NAME]">
    <sourcecontrol type="vss">
      <!-- you have to put quotes around this because of the spaces in the path -->
      <executable>"C:\Program Files\Microsoft Visual Studio\VSS\win32\SS.EXE"</executable>
      <project>$/[VSS_PROJECT]</project>
      <username>[USERNAME]</username>
      <password>[PASSWORD]</password>
      <ssdir>[location of srcsafe.ini]</ssdir>
    </sourcecontrol>
    <build type="nant">
      <executable>..\tools\nant\NAnt.exe</executable>
      <baseDirectory>..</baseDirectory>
      <buildFile>cruise.build</buildFile>
      <targetList>
        <target>run</target>
      </targetList>
      <!-- maximum time in milliseconds to let the nant process run -->
      <buildTimeout>300000</buildTimeout>
    </build>
    <history type="xmlhistory" historyDir="[HISTORY_DIR]" />
    <publishers>
      <email from="[BUILDMASTER@YOURCOMPANY.COM]" mailhost="[MAILHOST_ADDRESS]" includeDetails="[TRUE|FALSE]">
       <projectUrl>[PROJECT_URL]</projectUrl>
       <users>
          <user name="buildmaster" group="buildmaster" address="[BUILDMASTER@YOURCOMPANY.COM]"/>
          <user name="[DEVELOPER]" group="developers" address="[DEVELOPER@YOURCOMPANY.COM]"/>
        </users>
        <groups>
          <group name="developers" notification="change"/>
          <group name="buildmaster" notification="always"/>
        </groups>
      </email>
      <xmllogger>
        <logDir>..\ccnet-config\cclog</logDir>
      </xmllogger>
    </publishers>
    <!-- minimum time in milliseconds between last check in and start of build -->
    <modificationDelay>20000</modificationDelay>
    <!-- time in milliseconds to sleep between builds -->
    <sleepTime>30000</sleepTime>
  </project>
</cruisecontrol>